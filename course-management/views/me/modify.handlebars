<h3 class="text-center">I am here</h3>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            {{> _sidebar}}
        </div>
        <div class="col-md-8">
            <div class="card card-body">
                <div class="card card-body">
                    <h3 class="text-center">Modification</h3>
                    <p class="text-center">{{email}}</p>
                    <form action="/me/modify/{{ userV }}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <label for="name">User Name</label>
                            <input type="text" class="form-control" name="name" value="{{ name }}" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" value="{{ password }}" required>
                        </div>
                        <div class="form-group">
                            <label for="repassword">Repassword</label>
                            <input type="password" class="form-control" name="repassword" value="{{ repassword }}"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="vcode">Verify Code</label>
                            <div class="vcode-wrap row">
                                <input type="text" class="form-control col-md-7" name='vcode' required>
                                {{!-- refresh vcode-image by clicking with a random parameter --}}
                                <img src="/captcha" alt="vcode" title="Click for New" class="captcha-vcode col-md-4"
                                    onclick="this.src='/captcha?rand=' + Math.random()">
                            </div>
                        </div>
                        <button class="btn btn-block btn-primary">Save Modification</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>